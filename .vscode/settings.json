{
  // Auto-approve safe terminal commands
  "chat.tools.terminal.autoApprove": {
    // Basic commands
    "echo": true,
    "ls": true,
    "pwd": true,
    "cat": true,
    "head": true,
    "tail": true,
    "wc": true,
    "sleep": true,
    "grep": true,
    "find": true,
    "tree": true,
    
    // Git commands (safe read-only and feature branch operations)
    "git status": true,
    "git log": true,
    "git log --oneline": true,
    "git log --stat": true,
    "git log --graph": true,
    "git branch": true,
    "git branch -a": true,
    "git diff": true,
    "git show": true,
    "git tag": true,
    "git remote": true,
    "git config": true,
    "git add": true,
    "git add .": true,
    "git commit": true,
    "git commit -m": true,
    "git checkout": true,
    "git checkout -b": true,
    "git push": true,
    "git push origin": true,
    "git fetch": true,
    "git stash": true,
    
    // GitHub CLI
    "gh": true,
    "gh run": true,
    "gh run list": true,
    "gh run view": true,
    "gh workflow": true,
    "gh workflow list": true,
    
    // Arduino CLI
    "arduino-cli": true,
    "arduino-cli compile": true,
    "arduino-cli board": true,
    "arduino-cli core": true,
    "arduino-cli lib": true,
    
    // Development tools
    "curl": true,
    "wget": true,
    "which": true,
    "file": true,
    "ps": true,
    "lsof": true,
    
    // Dangerous commands explicitly denied
    "rm": false,
    "rmdir": false,
    "sudo": false,
    "chmod": false,
    "chown": false
  },
  
  // Let agent run tasks without prompt
  "github.copilot.chat.agent.runTasks": true
}
